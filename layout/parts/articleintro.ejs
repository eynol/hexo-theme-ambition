  <% if (post.title){

   } else {
     post.title = '(no title)';
  } %>


<h1 class='title'><% if(index){%>
    <a  href="<%- url_for(post.path) %>"><%- post.title %></a>
    <%}else{%>
      <%- post.title %>
    <%}%>
    <%if(post.link){%>
      <a href="<%- post.link %>" style="font-size:12px; text-decoration:underline;margin-left:2em;" class="thin" target="_blank">link</a>
    <%}%>
</h1>
<p class="detail">
    <time datetime="<%- date(post.date,'YYYY-MM-DD HH:mm')%>" title="<%- date(post.date) %>"><span class="time-readable"><%- date(post.date)%></span></time>
    <% if (post.tags && post.tags.length){ %>
        <%- list_tags(post.tags, {
            style: 'a',
            show_count: false,
            separator:'/'
          }) %>
          <% } %>

</p>

<% if (theme.excerpt_link){ %>
    <% if(index && post.excerpt){%>
    <%- post.excerpt %>
    <a href="<%- url_for(post.path) %>">
            <%- theme.excerpt_link %>
    </a>
    <p class="brief">
            <a href="<%- url_for(post.path) %>#more">
                <%- theme.excerpt_link %>
            </a>
    </p>
    <%}%>
    <%} %>
