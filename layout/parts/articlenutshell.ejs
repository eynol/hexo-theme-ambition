<section class="article-intro">
    <h1 class='article-title' title="Click to Read">
        <a  href="<%- url_for(post.path) %>">
          <%- post.title?post.title:"(No Title)" %>
        </a>
        <%if(post.link){%>
          <a href="<%- post.link %>" title="Follow the external link" class="thin link" target="_blank"  rel="noopener">&nbsp</a>
        <%}%>
    </h1>
   
    <%- partial('parts/date_tags', {post: post}) %>
    <div class="brief">
    <% if( post.excerpt){%>
        <%- post.excerpt %>
        <p class="text-center">
            <a class="readmore" href="<%- url_for(post.path)+'#more' %>" title="Click to Read More">
                <span class="readmore__text"><%- config.excerpt_link?config.excerpt_link:'...' %></span>
                <span class="readmore__emotion">=￣ω￣=</span>
            </a>
        </p>
    <%}else{%>
        <%- post.content %>
    <%}%>
    </div>  
</section>