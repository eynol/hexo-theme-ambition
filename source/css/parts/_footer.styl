////////////////////////////////////////////////////////
//          Page's footer 
//////////////////////////////////////////////////////////
.main-wrapper>footer
    box-sizing: border-box;
    padding: 3rem 0 2rem;
    width: 100%;
    background-color: color-theme-dark
    clearfix()
    @extends .not-select;
    h1,h2,h3,h4,h5
        color: black

footer-link()
    a
        no-link-effect()
        margin:0 .67em
        color:black
        padding: 0
        &:hover
            text-decoration: underline
       


.footer-nav
    width: 250px
    float: right
    display: inline-block
    box-sizing: border-box
    margin-top: 3.34rem
    li
        list-style: none
        display: block
        margin-bottom: 10px
        a
            background: black
            color:color-theme
            &:hover
                text-decoration: underline
                &:before
                    display: none
                
.friends-link
    margin-right: 250px
    box-sizing: border-box
    padding-left: 10rem
    footer-link()
.footer-info    
    text-align: center
    color: color-theme
    background-color: black
    padding: 16px
    a
        no-link-effect()
        color: inherit
        padding: 0
        &:hover
            text-decoration: underline
           

@media screen and (max-width:700px)
    .footer-nav
        float: none
        a
            font-size: 1.3rem
            padding-left: 2rem
            box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
    .friends-link
        padding-left: 2rem
        margin-right: 0
        a
            font-weight: 900
            text-decoration: underline
