/////////////////////////////////////////////////
//          Page Header & nav
//////////////////////////////////////////////////
.nav-header 
    position: relative
    z-index 5
    width 100%
    height 80px
    clearfix()
    background-color: white
    @extends .not-select;

//logo 
.logo-header
    display inline-block
    padding 2rem 0 0 80px
    zoom 1
    height 80px
    box-sizing border-box
    *display inline
    a 
        position relative
        font-size 1.3rem
        font-weight 900
        letter-spacing 4px
        text-transform uppercase
        color color-black
@media screen and (max-width:700px)
    .logo-header
        padding-left: 36px




//nav bar
.nav-ul 
    float right
    display inline-block
    box-sizing border-box
    height 80px
    padding 2rem 80px 0 0
    ul
        margin 0
        list-style none
    li
        display inline-block
        a
            position relative
            display block
            margin 5px 8px
            font-weight bold
            padding-top 5px
            color color-text
            text-transform uppercase
        .close-btn
            display: none

.nav-mobile-avator 
    display inline-block
    position absolute
    top 2rem
    right 3rem
    text-decoration none
    span 
        position relative
        display inline-block
        width 27px
        height 5px
        transition background-color 0.5s
        transform-origin center center
        background-color color-black
        &:before
            position absolute
            top -7px
            left 0
            display inline-block
            width 27px
            height 5px
            content ""
            transition 0.5s
            transform-origin center center
            background-color color-black
        &:after
            position absolute
            top 7px
            left 0
            display inline-block
            width 27px
            height 5px
            content ""
            transition 0.5s
            transform-origin center center
            background-color color-black
    &.active 
        position: fixed
        z-index: 99
        span
            background-color transparent
            &:before
                top 0
                transform rotateZ(45deg)
            &:after
                top 0
                transform rotateZ(-45deg)


.nav-mobile-avator 
    display none



@media screen and (max-width:700px)
    .nav-mobile-avator
        display: inline-block
    .nav-ul
        z-index: -999
        float none
        position fixed
        display none
        top 0
        right 0
        left 0
        bottom 0
        padding 70px 0 0 
        margin 0
        height 100%
        opacity: 0
        overflow hidden
        list-style none
        text-align center
        transition: opacity .5s
        background-color rgba(254,230,0,.9)
        transform: translate3d(0,0,0)
        animation-duration: .5s
        animation-fill-mode: forwards
        animation-timing-function: linear
        ul
            position: relative;
            width: 100%;    
        li
            display block
            margin auto
            text-align center
            a
                display: inline-block;
                padding: 0.5rem 10px;
                color white
                font-size: 3em
                no-link-effect()
            .close-btn
                display: inline-block

        &.active
            z-index: 88
            opacity: 0
            display: block
            animation-name: menu-fade-in ;
            li 
                .close-btn
                    position: fixed
    

@keyframes menu-fade-in {
    0% {
       display: block
    }
    5%{
        opacity: 0
    }
    100% {
        opacity: 1
    }
}
