////////////////////////////////
//          Article entry
//////////////////////////////////////
.index .article-intro
    padding:2em
    background-color: white
    box-shadow: 0 3px 8px 0 rgba(0,0,0,.16);
.title
    position relative
    margin-bottom 0
    font-size 48px
    line-height 54px
    font-weight 700
    a
        font-size inherit
        color color-text
        no-link-effect()
        padding 0
        .title2
            font-size: .8em
     .title2
            font-size: 2rem

@media screen and (max-width:700px)
    .title
        font-size: 2rem;
        line-height: 2.33rem;
        .title2
            font-size: 1rem


.brief
    position: relative
        
.detail
    font-size 0.7rem
    margin-bottom 0.3rem
    color color-gray
    time
        position relative
        display inline-block
        padding-right 5px 
    .tag-link
        color color-gray
        font-size  0.7rem
        no-link-effect()
        &:hover
            color color-blue
            text-decoration: underline

.readmore
    position: absolute
    display: block
    top:0
    left: 0
    bottom: 0
    right: 0
    height: 100%
    width: 100%;
    opacity: 0
    color: color-text
    font-weight: 400
    &:hover
        color: color-blue
   


 .article-index 
    .title a
        &:hover
            &:after
                content "_"
                animation: blinkDash .8s infinite

.typewriter
    h1:after
        content "_"
        animation: blinkDash 1s infinite

@keyframes blinkDash{
    0%{
        opacity: 0
    }
    50%{
        opacity: 1
    }
    100%{
        opacity: 0
    }
}
    section 
        padding: 5px 0;
        margin-bottom: 4rem;

