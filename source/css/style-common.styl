//////////////////////////////////////////////////////
//          Material-shadow effect
///////////////////////////////////////////////////////
.material-shadow
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
.material-shadow-inset-top
    box-shadow: inset 0 16px 7px -10px rgba(0,0,0,0.16), inset 0 8px 20px -16px rgba(0,0,0,0.12)
.material-shadow-inset-bottom
    box-shadow: inset 0 -5px 10px -7px rgba(0,0,0,0.16), inset 0 -4px 12px -4px rgba(0,0,0,0.12)
.material-shadow-hover
    &:hover
        box-shadow: 0 5px 11px -3px rgba(0, 0, 0, 0.18), 0 4px 15px -3px rgba(0, 0, 0, 0.15);
.material-shadow-hover-high
    &:hover
        box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15);

.btn
    background-color: white
    color: black
    border-radius: 3px
    padding: 5px 10px
    transition: 0.3s
    @extends .material-shadow
    @extends .material-shadow-hover

    
//////////////////////////////////////////////////////
//          Link effect
///////////////////////////////////////////////////////
link-hover-effect()
    &:hover
        background-color: color-theme;
        &:before
            position absolute
            display inline-block
            content ""
            top 0
            bottom 0
            left -5px
            width 5px
            background-color black

no-link-effect() 
    &:hover 
        background-color transparent
        &:before 
            display none

link()
    margin 0 5px
    font-weight 400
    position relative
    link-hover-effect()





    
