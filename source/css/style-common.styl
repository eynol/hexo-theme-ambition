    background-color: white
    color: black
    border-radius: 3px
    padding: 5px 10px
    transition: 0.3s
    @extends .material-shadow
    @extends .material-shadow-hover

    
//////////////////////////////////////////////////////
//          Link effect
///////////////////////////////////////////////////////
link-hover-effect()
    &:hover
        background-color: color-theme;
        &:before
            position absolute
            display inline-block
            content ""
            top 0
            bottom 0
            left -5px
            width 5px
            background-color black

no-link-effect() 
    &:hover 
        background-color transparent
        &:before 
            position: initial;
            display: initial;
            content: initial
            background-color: transparent;

link()
    margin 0 5px
    font-weight 400
    position relative
    link-hover-effect()





    
