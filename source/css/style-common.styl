.nav-mobile-avator 
    display inline-block
    margin 2rem 3rem
    transition 0.3s
    text-decoration none
    span 
        position relative
        display inline-block
        width 27px
        height 5px
        transition 0.5s
        transform-origin center center
        background-color black
        &:before
            position absolute
            top -7px
            left 0
            display inline-block
            width 27px
            height 5px
            content ""
            transition 0.5s
            transform-origin center center
            background-color black
        &:after
            position absolute
            top 7px
            left 0
            display inline-block
            width 27px
            height 5px
            content ""
            transition 0.5s
            transform-origin center center
            background-color black
        &.active
            background-color transparent
            &:before
                top 0
                transform rotateZ(135deg)
            &:after
                top 0
                transform rotateZ(-135deg)


.nav-mobile-avator 
    display none


@media screen and (max-width:700px)
    .nav-mobile-avator
        display: inline-block
    .nav-ul
        position absolute
        top 79px
        right 0
        left 0
        display block
        height 0
        padding 0
        margin 0
        overflow hidden
        list-style none
        transition 0.5s
        text-align center
        background-color white
        box-shadow 0 4px 6px rgba(0, 0, 0, .3)
        li
