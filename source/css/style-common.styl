//////////////////////////////////////////////////////
//          Material-shadow effect
///////////////////////////////////////////////////////
.material-shadow
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
.material-shadow-inset-top
    box-shadow: inset 0 16px 7px -10px rgba(0,0,0,0.16), inset 0 8px 20px -16px rgba(0,0,0,0.12)
.material-shadow-inset-bottom
    box-shadow: inset 0 -5px 10px -7px rgba(0,0,0,0.16), inset 0 -4px 12px -4px rgba(0,0,0,0.12)
.material-shadow-hover
    &:hover
        box-shadow: 0 5px 11px -3px rgba(0, 0, 0, 0.18), 0 4px 15px -3px rgba(0, 0, 0, 0.15);
.material-shadow-hover-high
    &:hover
        box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15);
.not-select
    user-select: none
    -moz-user-select:none 
    -ms-user-select: none
    -webkit-user-select: none

